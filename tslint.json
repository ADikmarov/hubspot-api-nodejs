{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "lib",
      "codegen/**/*"
    ]
  },
  "rules": {
    "prefer-const": false,
    "max-classes-per-file": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "variable-name": {
      "options": [
        "allow-leading-underscore"
      ]
    }
  }
}
