extends includes/layout
block content
  .container
    h3 Tokens
    table(class='tokens-table')
      thead
        tr
          th Name
          th Value
      tbody
        tr
          td Access Token
          td #{tokenStore.accessToken || ''}
        tr
          td Refresh Token
          td #{tokenStore.refreshToken || ''}
        tr
          td Expires In
          td #{tokenStore.expiresIn || ''}
        tr
          td Updated At
          td #{tokenStore.updatedAt ? new Date(tokenStore.updatedAt) : ''}

    h3 Contacts
    table
      thead
        tr
          th ID
          th Name
          th Company
      tbody
        each contact in contacts
          tr
            td #{contact.id}
            td #{contact.name}
            td #{contact.companyName}
